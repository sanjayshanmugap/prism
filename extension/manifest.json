{
  "manifest_version": 3,
  "name": "Prism AI Overlay",
  "version": "1.0.0",
  "description": "AI-powered page analysis and overlay for enhanced web interactions",
  "permissions": ["activeTab", "storage", "tabs", "scripting", "contextMenus"],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Prism AI Overlay"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Open Prism AI popup"
    },
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Toggle Prism AI overlay"
    },
    "quick-analyze": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Quick analyze current page"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "*.css", "*.js"],
      "matches": ["*://*/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
