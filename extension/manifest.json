{
  "manifest_version": 3,
  "name": "Prism AI Overlay",
  "version": "1.0.0",
  "description": "Voice-activated AI overlay for web analysis and insights",
  "permissions": [
    "activeTab",
    "storage",
    "background",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Prism AI Overlay",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay-components.js", "overlay.css", "backend/**/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
