# Prism Environment Configuration
# Add your actual API keys here

# Perplexity API - Get from https://www.perplexity.ai/
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Deepgram API - Get from https://deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# YouTube Data API - Get from Google Cloud Console
YOUTUBE_API_KEY=your_youtube_api_key_here

# Database Configuration
DATABASE_PATH=./data/prism.db

# Agent Configuration
AGENT_WS_PORT=8080
AGENT_HOST=localhost

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/prism.log

# Development
NODE_ENV=development
ELECTRON_IS_DEV=true

# Optional: Custom hotkeys (default values shown)
HOTKEY_TOGGLE=CmdOrCtrl+Shift+P
HOTKEY_VOICE=CmdOrCtrl+Shift+V
HOTKEY_EXPLAIN=CmdOrCtrl+Shift+E
HOTKEY_HELP=CmdOrCtrl+Shift+H

# Optional: UI Configuration
OVERLAY_OPACITY=0.95
ANIMATION_SPEED=fast
THEME=glass